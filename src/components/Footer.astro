---
const year = new Date().getFullYear()

import { siteConfig } from '~/config'

const TwitterLink = `https://twitter.com/${siteConfig.author.contacts.twitter}`
const GithubLink = `https://github.com/${siteConfig.author.contacts.github}`
const MastodonLink = `https://${siteConfig.author.contacts.mastodon_url}`
---

<footer class="bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-100">
  <div class="mx-auto max-w-6xl py-10">
    <div class="grid md:gap-8 sm:grid-cols-1 md:grid-cols-4 lg:grid-cols-4">
      <div class="">
        <h6
          class="mb-4 flex items-center justify-center text-3xl font-normal uppercase md:justify-start"
        >
          equk
        </h6>
      </div>
      <div class=""></div>
      <div class="footer-nav hidden md:block">
        <nav
          aria-label="More on this site"
          class="gap-x-2 text-center sm:gap-x-0"
        >
          <ul class="md:self-center md:text-base">
            <li class="inline-block"><a href="/"> Home</a></li>
            <li class="inline-block"><a href="/blog"> Blog</a></li>
            <li class="inline-block"><a href="/about"> About</a></li>
          </ul>
        </nav>
      </div>
      <div class="social-blocks">
        <a
          href={TwitterLink}
          target="_blank"
          aria-label="go to twitter"
          rel="noopener noreferrer"
        >
          <i class="fa fa-twitter"></i>
        </a>
        <a
          href={GithubLink}
          target="_blank"
          aria-label="go to github"
          rel="noopener noreferrer"
        >
          <i class="fa fa-github"></i>
        </a>
        <a
          href={MastodonLink}
          target="_blank"
          aria-label="go to mastodon"
          rel="noopener noreferrer"
        >
          <i class="fa fa-mastodon"></i>
        </a>
      </div>
    </div>
  </div>
  <div class="dark:bg-gray-900 bg-gray-200">
    <div class="grid md:grid-cols-2 mx-auto max-w-6xl">
      <div class="text-center md:text-left text-sm">
        Copyright &copy; {year} equk.co.uk all rights reserved.
      </div>
      <div class="text-right text-sm hidden md:block">Powered by</div>
    </div>
  </div>
</footer>
